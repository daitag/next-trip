<div class="container">
<div class="content-title">トップページ</div>

<div class="page-sub-title content-top-margin_20">会員数</div>
<div class="sub-content">
	<%=link_to admin_users_path do %>
		<%= @users.count %>名登録中!!
	<% end %>
</div>

<div class="page-sub-title content-top-margin_20">アラート一覧</div>
<table class="table table-hover table-bordered">
		<thead>
			<tr>
				<th>投稿タイトル</th>
				<th>ユーザ名</th>
				<th>投稿ステータス</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @alerts.each do |alert| %>
			<tr>
				<td><%= alert.post.title %></td>
				<td><%= link_to alert.user.name, admin_user_path(alert.post.user.id) %></td>
				<td>
					<% if alert.post.post_status == true %>
						<span>有効</span>
					<% else %>
						<span>無効</span>
					<% end %>
				</td>
				<td><%= link_to '詳細',admin_post_path(alert.post.id) %></td>
			</tr>
			<% end %>
		</tbody>
</table>
<%=  paginate @alerts %>
</div>