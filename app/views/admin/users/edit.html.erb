<h2>ユーザ情報編集</h2>


<%= form_for(@user,url:admin_user_path(@user)) do |f| %>
<div class="row">
	<div class="col-md-4">
		<%= attachment_image_tag(@user,:image,size:"200x200", fallback: "no_image.jpg") %>
		<%= f.attachment_field :image,id:"user_image_preview" %>
	</div>
	<div class="col-md-8">
		<%= f.label "名前" %>
		<%= f.text_field :name,class: "form-control" %>
		<%= f.label "出身" %>
		<%= f.text_field :country,class: "form-control" %>
		<%= f.label "メールアドレス" %>
		<%= f.email_field :email,class: "form-control" %>
		<div class="user_status">
			<%= f.label :user_status,"ユーザステータス" %>
			<div class="radio_button">
				<%= f.radio_button :user_status,:true %>
				<%= f.label :user_status,"有効" , value: true %>
				<%= f.radio_button :user_status,:false %>
				<%= f.label :user_status,"無効" , value: false %>
			</div>
		</div>
		<%= f.submit "編集する",class: "btn" %>
	</div>
<% end %>
</div>
<%= link_to "詳細に戻る",admin_user_path(@user),class: "btn btn-primary" %>