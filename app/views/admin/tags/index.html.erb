<div class="container">
<div class="page-sub-title">タグの制作</div>

<%= form_for(@tag,url:admin_tags_path) do |f| %>
	<div class="field">
		<%= f.label :tag_name,"タグ名",class: "m-0" %>
		<%= f.text_field :tag_name,placeholder: "タグ名を入力して下さい",class: "form-control" %>
		<% if @tag.errors.include?(:tag_name) %>
	    	<span style="color: red;"><%= @tag.errors.full_messages_for(:tag_name).first %></span>
		<% end %>
	</div>

	<%= f.radio_button :tag_status,:true, checked: true %>
	<%= f.label :tag_status, "有効",value: true %>
	<%= f.radio_button :tag_status,:false %>
	<%= f.label :tag_status, "無効",value: false %>
	<%= f.submit "作成",class: "btn" %>
<% end %>


<!-- 一覧 -->
<table class="table table-hover border content-top-margin_20">
	<thead>
		<tr>
			<th>タグ名</th>
			<th>タグステータス</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @tags.each do |tag| %>
		<tr>
			<td><%= tag.tag_name %></td>
			<td>
				<% if tag.tag_status == true %>
					<label>有効</label>
				<% else %>
					<label>無効</label>
				<% end %>
			</td>
			<td><%= link_to "編集",edit_admin_tag_path(tag) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>