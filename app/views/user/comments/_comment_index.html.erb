<h4>コメント一覧</h4>
<div class="comment_index">
	<% comments.each do |comment| %>
		<div class="comment">
			<%= comment.comment %>
		</div>
		<div class="comment-user">
			<%= attachment_image_tag(comment.user,:image,:fill, 20, 20, class: "user_image") %>
			<%= comment.user.name %>
			<%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
			<%= link_to "削除する",post_comment_path(comment.post,comment),method: :delete,remote: true,data: {confirm: "本当に削除しますか？"} %>
		</div>
	<% end %>
</div>