<h2>ユーザ情報編集</h2>

<%= form_for(@user,url:admin_user_path(@user)) do |f| %>
	<%= f.attachment_field :image,id: "user_image_preview" %>
	<%= f.label "名前" %>
	<%= f.text_field :name %>
	<%= f.label "出身" %>
	<%= f.text_field :country %>
	<%= f.label "メールアドレス" %>
	<%= f.email_field :email %>
	<%= f.radio_button :user_status,:true %>
	<%= f.label :user_status,"有効" , value: true %>
	<%= f.radio_button :user_status,:false %>
	<%= f.label :user_status,"無効" , value: false %>
	<%= f.submit "編集する" %>
<% end %>

<%= link_to "詳細に戻る",admin_user_path(@user) %>