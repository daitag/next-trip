<h2>ユーザ情報編集</h2>

<%= attachment_image_tag(@user,:image,size:"200x200", class: "user_image") %>

<%= form_for(@user,url:user_path(@user)) do |f| %>
	<%= f.attachment_field :image,id:"user_image_preview" %>
	<%= f.label "名前" %>
	<%= f.text_field :name %>
	<%= f.label "出身" %>
	<%= f.text_field :country %>
	<%= f.label "メールアドレス" %>
	<%= f.email_field :email %>
	<%= f.submit "編集する" %>
<% end %>

<%= link_to "詳細に戻る",user_path(@user) %>