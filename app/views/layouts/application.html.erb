<!DOCTYPE html>
<html>
  <head>
    <title>NextTrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- fontawosome -->
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>


  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <% if user_signed_in? %>
          <%= link_to 'NextTrip' ,posts_path,class: "navbar-brand" %>
        <% elsif admin_signed_in?%>
          <%= link_to 'NextTrip' ,admin_top_path,class: "navbar-brand" %>
        <% else %>
          <%= link_to 'NextTrip' ,root_path,class: "navbar-brand" %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="nav navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li><%= link_to '投稿一覧',posts_path,class: "nav-link" %></li>
            <li><%= link_to '新規投稿',new_post_path,class: "nav-link" %></li>
            <li><%= link_to 'マイトリップ',user_path(current_user.id),class: "nav-link" %></li>
            <li><%= link_to 'ログアウト',destroy_user_session_path,method: :delete,class: "nav-link" %></li>
            <% elsif admin_signed_in?%>
            <li><%= link_to '会員一覧',admin_user_path,class: "nav-link" %></li>
            <li><%= link_to 'タグ作成',admin_tag_path,class: "nav-link" %></li>
            <li><%= link_to 'お知らせ',admin_notice,class: "nav-link" %></li>
            <li><%= link_to 'ログアウト',destroy_admin_session_path,method: :delete,class: "nav-link" %></li>
            <% else %>
            <li><%= link_to 'NextTripとは',root_path,class: "nav-link" %></li>
            <li><%= link_to '人気の投稿',root_path,class: "nav-link" %></li>
            <li><%= link_to '新規会員登録',new_user_registration_path,class: "nav-link" %></li>
            <li><%= link_to 'ログイン',new_user_session_path,class: "nav-link" %></li>
            <% end %>
          </ul>
          <!-- 検索ボックス -->
          <%= search_form_for @search,url: posts_path,class: "form-inline my-2 my-lg-0" do |f| %>
            <%= f.search_field :location_cont,class: "form-control mr-sm-2" %>
            <%= f.submit "検索",class: "btn my-2 my-sm-0" %>
          <% end %>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer class="footer">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNav">
          <p class="ml-auto">©Next-Trip.co</p>
        </div>
      </nav>

    </footer>
  </body>
</html>
