<h2>詳細画面</h2>

<!--非表示設定 -->
<%= form_for @post,url:admin_post_path(@post) do |f| %>
	<%= f.radio_button :post_status,:true, checked: true %>
	<%= f.label :post_status, "公開",value: true %>
	<%= f.radio_button :post_status,:false %>
	<%= f.label :post_status, "非公開",value: false %>
	<%= f.submit "変更する" %>
<% end %>

<div class="row">
	<div class="col-md-6">
		<% @post.post_images.each do |image| %>
			<%= attachment_image_tag(image,:image ,:fill ,200,200) %>
		<% end %>
	</div>
	<div class="col-md-6">
		<h4>タイトル</h4>
		<%= @post.title %>
		<h4>場所</h4>
		<%= @post.location %>
		<h4>説明</h4>
		<%= @post.body %>
		<h4>タグ</h4>
		<% @post.tags.each do |tag| %>
			<%= tag.tag_name %>
		<% end %>

		<!-- コメント一覧 -->
		<%= @post.comments.count %>コメント

		<!-- いいねの表示 -->
		<i class="fas fa-heart" style="color: red;"></i>
		<%= @post.favorites.count %>
		<!-- いいね -->

		<!-- 行きたいの表示 -->
		<i class="fas fa-globe-asia" style="color: dodgerblue;"></i>
		<%= @post.good_places.count %>いきたい!


		<%= link_to "削除",post_path, method: :delete, data: {confirm: "本当に削除しますか？"} %>
	</div>
</div>

<%= link_to "一覧画面", admin_top_path %>
